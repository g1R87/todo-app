generator client {
  provider = "prisma-client-js"
}
// url      = "postgresql://prashant:password@localhost:5432/todoapp"
datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:56645484h@localhost:5432/todofinal"
}

model User {
  id        Int      @default(autoincrement()) @id
  email     String   @unique
  name      String?
  posts     Post[]
  password  String   @default("Hello")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Post {
  id        Int      @default(autoincrement()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  published Boolean  @default(false)
  title     String
  content   String?
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}
